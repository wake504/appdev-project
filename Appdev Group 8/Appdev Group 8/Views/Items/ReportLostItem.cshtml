@{
    ViewData["Title"] = "Report Lost Item";
}

<style>
    .navbar-brand {
        font-size: 1.75rem;
        font-weight: 600;
        color: #37474f !important;
    }
    .form-container {
        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        padding: 2rem;
        margin-top: 2rem;
    }
    .form-label {
        font-weight: 500;
        color: #424242;
        margin-bottom: 0.5rem;
    }
    .required {
        color: #d32f2f;
    }
    .form-control:focus {
        border-color: #1976d2;
        box-shadow: 0 0 0 0.2rem rgba(25, 118, 210, 0.25);
    }
    .btn-primary {
        background-color: #1976d2;
        border-color: #1976d2;
        padding: 0.5rem 2rem;
    }
    .btn-primary:hover {
        background-color: #1565c0;
        border-color: #1565c0;
    }
    .btn-cancel {
        background-color: #e0e0e0;
        border-color: #e0e0e0;
        color: #424242;
        padding: 0.5rem 2rem;
    }
    .btn-cancel:hover {
        background-color: #d5d5d5;
        border-color: #d5d5d5;
    }
    .char-count {
        font-size: 0.875rem;
        color: #757575;
    }
</style>

<nav class="navbar navbar-light bg-transparent">
    <div class="container">
        <span class="navbar-brand">Lost&Logged</span>
        <div>
            <a asp-action="ViewFoundItems" class="text-decoration-none me-3 text-secondary">View Found Items</a>
            <a asp-action="MyReports" class="text-decoration-none text-secondary">My Reports</a>
        </div>
    </div>
</nav>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="form-container">
                <div class="d-flex align-items-start mb-4">
                    <img src="~/images/step-report.png" alt="Report" style="width: 120px; height: 100px; margin-right: 1rem; border-radius: 8px;">
                    <div>
                        <h2 class="mb-2">Report Lost Item</h2>
                        <p class="text-muted">Please provide the following details about the item you lost.</p>
                    </div>
                </div>

                <form method="post" asp-action="SubmitReport">
                    <div class="mb-3">
                        <label for="itemName" class="form-label">
                            Item Name <span class="required">*</span>
                        </label>
                        <input type="text" class="form-control" id="itemName" name="itemName" placeholder="E.g., Red Backpack" required>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">
                            Description <span class="required">*</span>
                        </label>
                        <textarea class="form-control" id="description" name="description" rows="3" maxlength="300" placeholder="Describe the lost item, any distinguishing features, and other relevant details." required></textarea>
                        <div class="char-count text-end mt-1"><span id="charCount">0</span>/300 Characters</div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="dateLost" class="form-label">
                                Date Lost <span class="required">*</span>
                            </label>
                            <input type="date" class="form-control" id="dateLost" name="dateLost" required>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label for="lastSeenLocation" class="form-label">
                                Last Seen Location <span class="required">*</span>
                            </label>
                            <input type="text" class="form-control" id="lastSeenLocation" name="lastSeenLocation" placeholder="E.g., Library, 2nd Floor" required>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="contactInfo" class="form-label">
                            Contact Info <span class="text-muted">(Optional)</span>
                        </label>
                        <input type="text" class="form-control" id="contactInfo" name="contactInfo" placeholder="Please enter your email or phone number">
                    </div>

                    <div class="d-flex gap-2">
                        <a asp-action="Dashboard" class="btn btn-cancel">Cancel</a>
                        <button type="submit" class="btn btn-primary">Submit Report</button>
                    </div>
                </form>
            </div>

            <div class="text-center mt-5" style="color: #757575; font-size: 0.875rem;">
                Â© 2025 Lost&Logged. For academic use only.
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('description').addEventListener('input', function () {
        document.getElementById('charCount').textContent = this.value.length;
    });
</script>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
}
