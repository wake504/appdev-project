@{
    ViewData["Title"] = "View Found Items";
}

<style>
    .navbar-brand {
        font-size: 1.75rem;
        font-weight: 600;
        color: #37474f !important;
    }
    .content-container {
        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        padding: 2rem;
        margin-top: 2rem;
    }
    .page-title {
        color: #37474f;
        font-size: 1.75rem;
        font-weight: 600;
        margin-bottom: 0.75rem;
    }
    .page-description {
        color: #616161;
        margin-bottom: 2rem;
    }
    .search-box {
        max-width: 300px;
    }
    .table {
        margin-top: 1.5rem;
    }
    .table thead th {
        background-color: #f5f5f5;
        color: #424242;
        font-weight: 600;
        border-bottom: 2px solid #e0e0e0;
        padding: 0.75rem;
    }
    .table tbody tr {
        border-bottom: 1px solid #ffffff;
    }
    .table-striped > tbody > tr:nth-of-type(odd) > * {
        background-color: white !important;
    }
    .table-striped > tbody > tr:nth-of-type(even) > * {
        background-color: #e3f2fd !important;
    }
    .table-striped > tbody > tr:hover > * {
        background-color: #d1e7f8 !important;
    }
    .table tbody td {
        padding: 0.75rem;
        color: #424242;
    }
    .item-link {
        color: #1976d2;
        text-decoration: none;
        font-weight: 500;
    }
    .item-link:hover {
        text-decoration: underline;
    }
    .sortable {
        cursor: pointer;
        user-select: none;
    }
    .sortable::after {
        content: ' ⇅';
        color: #999;
        font-size: 0.875rem;
    }
    .pagination-info {
        color: #616161;
        font-size: 0.875rem;
    }
    .pagination .page-link {
        color: #424242;
        border: 1px solid #dee2e6;
    }
    .pagination .page-item.active .page-link {
        background-color: #1976d2;
        border-color: #1976d2;
    }
    .btn-search {
        background-color: #1976d2;
        border-color: #1976d2;
        color: white;
    }
    .btn-search:hover {
        background-color: #1565c0;
        border-color: #1565c0;
    }
</style>

<nav class="navbar navbar-light bg-transparent">
    <div class="container">
        <span class="navbar-brand">Lost&Logged</span>
        <div>
            <a asp-action="MyReports" class="text-decoration-none me-3 text-secondary">My Reports</a>
            <a href="#" class="text-decoration-none text-secondary">Admin Dashboard</a>
        </div>
    </div>
</nav>

<div class="container">
    <div class="content-container">
        <div class="d-flex justify-content-between align-items-start mb-3">
            <div>
                <h1 class="page-title">View Found Items</h1>
                <p class="page-description">
                    Below is a list of items that have been found. If any of these items belong to you,<br>
                    please visit the admin office to claim them.
                </p>
            </div>
            <div class="search-box">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search items..." id="searchInput">
                    <button class="btn btn-search" type="button">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th class="sortable">Item Name</th>
                        <th>Description</th>
                        <th>Found Date</th>
                        <th>Location</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><a href="#" class="item-link">Red Backpack</a></td>
                        <td>Red with white logo.</td>
                        <td>04/22/2025</td>
                        <td>Building A, Hallway</td>
                    </tr>
                    <tr>
                        <td><a href="#" class="item-link">Set of Keys</a></td>
                        <td>Black car key, and 2 house keys.</td>
                        <td>04/21/2025</td>
                        <td>Library, 2nd Floor</td>
                    </tr>
                    <tr>
                        <td><a href="#" class="item-link">Water Bottle</a></td>
                        <td>Blue stainless steel.</td>
                        <td>04/20/2025</td>
                        <td>Gym Locker Room</td>
                    </tr>
                    <tr>
                        <td><a href="#" class="item-link">Calculator</a></td>
                        <td>Black Casio calculator</td>
                        <td>04/19/2025</td>
                        <td>Classroom 202</td>
                    </tr>
                    <tr>
                        <td><a href="#" class="item-link">Umbrella</a></td>
                        <td>Black with polka dots.</td>
                        <td>04/17/2025</td>
                        <td>Main Entrance</td>
                    </tr>
                    <tr>
                        <td><a href="#" class="item-link">Power Bank</a></td>
                        <td>Silver with a charging cable</td>
                        <td>04/15/2025</td>
                        <td>Cafeteria</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-3">
            <div class="pagination-info">
                Showing 1 to 6 of 20 found items.
            </div>
            <nav>
                <ul class="pagination mb-0">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">Previous</a>
                    </li>
                    <li class="page-item active">
                        <a class="page-link" href="#">1</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">2</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">3</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>

    <div class="text-center" style="color: #757575; font-size: 0.875rem; margin-top: 3rem;">
        © 2025 Lost&Logged. For academic use only.
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
}
