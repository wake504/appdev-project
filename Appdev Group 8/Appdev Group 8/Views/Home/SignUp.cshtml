@{
    ViewData["Title"] = "Sign Up";
}

<div class="d-flex align-items-center justify-content-center vh-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5 col-lg-4">

                <!-- App Title -->
                <h3 class="text-center mb-4 fw-bold logo-title">
                    Lost&Logged
                </h3>
                
                <!-- Sign Up Card -->
                <div class="card border-0 shadow">
                    <div class="card-body p-4">

                        <h6 class="text-center mb-4 fw-semibold text-secondary">
                            Create Account
                        </h6>

                        <h5 class="card-title">Sign Up</h5>
                        <form asp-action="SignUp" method="post">
                            @Html.AntiForgeryToken()
                            <div asp-validation-summary="All" class="text-danger mb-3"></div>
                            
                            <div class="mb-3">
                                <label class="form-label">Full Name</label>
                                <input class="form-control" name="fullName" required />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Email (Optional)</label>
                                <input type="email" class="form-control" name="email" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">School ID (Optional)</label>
                                <input class="form-control" name="schoolId" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Password</label>
                                <input type="password" class="form-control" name="password" required />
                            </div>

                            <button type="submit" class="btn btn-primary w-100">Create Account</button>
                        </form>

                        <p class="text-center small text-muted mt-3">
                            Already have an account? <a asp-action="Index" style="color: #800000; text-decoration: none; font-weight: 500;">Login here</a>
                        </p>
                   
                    </div>
                </div>
                
                <!-- Footer -->
                <p class="text-center small text-muted mt-3">
                    Â© 2025 Lost&Logged. For academic use only.
                </p>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
}
