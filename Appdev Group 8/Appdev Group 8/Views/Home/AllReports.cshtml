@{
    ViewData["Title"] = "All Reports";
}

<style>
    .admin-nav {
        border-bottom: 3px solid #e0e0e0;
        padding: 1rem 0;
        margin-bottom: 2rem;
    }

    .admin-nav a {
        color: #616161;
        text-decoration: none;
        margin-right: 2rem;
        font-weight: 500;
        font-size: 0.95rem;
        padding-bottom: 0.5rem;
        border-bottom: 3px solid transparent;
    }

    .admin-nav a.active {
        color: #1976d2;
        border-bottom: 3px solid #1976d2;
    }

    .admin-nav a:hover {
        color: #1976d2;
    }

    .section-title {
        font-size: 1.75rem;
        font-weight: 600;
        color: #37474f;
        margin-bottom: 2rem;
    }

    .filter-section {
        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        padding: 1.5rem;
        margin-bottom: 2rem;
    }

    .filter-row {
        display: flex;
        gap: 0.5rem;
        align-items: flex-end;
        flex-wrap: wrap;
    }

    .filter-group {
        flex: 1;
        min-width: 150px;
    }

    .filter-group.separator {
        flex: 0;
        min-width: auto;
        display: flex;
        align-items: center;
        padding: 0 0.25rem;
        color: #999;
    }

    .filter-label {
        font-weight: 500;
        color: #424242;
        margin-bottom: 0.5rem;
        display: block;
    }

    .form-control {
        border-color: #ddd;
    }

    .form-control:focus {
        border-color: #1976d2;
        box-shadow: 0 0 0 0.2rem rgba(25, 118, 210, 0.25);
    }

    .btn-filter {
        background-color: #1976d2;
        border-color: #1976d2;
        color: white;
        padding: 0.5rem 1.5rem;
    }

    .btn-filter:hover {
        background-color: #1565c0;
        border-color: #1565c0;
    }

    .search-box {
        position: relative;
        max-width: 300px;
        margin-bottom: 1.5rem;
    }

    .search-box input {
        border-color: #ddd;
        padding-left: 2.5rem;
    }

    .search-icon {
        position: absolute;
        left: 0.75rem;
        top: 50%;
        transform: translateY(-50%);
        color: #999;
    }

    .content-container {
        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        padding: 2rem;
    }

    .table {
        margin-bottom: 0;
    }

    .table thead th {
        background-color: #f5f5f5;
        color: #424242;
        font-weight: 600;
        border-bottom: 2px solid #e0e0e0;
        padding: 0.75rem;
    }

    .table tbody tr {
        border-bottom: 1px solid #e0e0e0;
    }

    .table tbody tr:hover {
        background-color: #f9f9f9;
    }

    .table tbody td {
        padding: 0.75rem;
        color: #424242;
        vertical-align: middle;
    }

    .item-link {
        color: #1976d2;
        text-decoration: none;
        font-weight: 500;
    }

    .item-link:hover {
        text-decoration: underline;
    }

    .sortable {
        cursor: pointer;
        user-select: none;
    }

    .sortable::after {
        content: ' ⇅';
        color: #999;
        font-size: 0.875rem;
    }

    .pagination-info {
        color: #616161;
        font-size: 0.875rem;
        margin-top: 1rem;
        margin-bottom: 1rem;
    }

    .pagination .page-link {
        color: #424242;
        border: 1px solid #dee2e6;
    }

    .pagination .page-item.active .page-link {
        background-color: #1976d2;
        border-color: #1976d2;
    }
</style>

<div class="container">
    <!-- Admin Navigation -->
    <div class="admin-nav">
        <a asp-action="AdminDashboard" asp-controller="Home" class="active">Admin Dashboard</a>
        <a asp-action="ManageLostReports" asp-controller="Home">Manage Lost Reports</a>
        <a asp-action="ManageFoundItems" asp-controller="Home">Manage Found Items</a>
        <a asp-action="AdminReports" asp-controller="Home">Admin Reports</a>
        <a asp-action="Logout" asp-controller="Home" class="ms-auto">Logout</a>
    </div>

    <!-- Page Title -->
    <h2 class="section-title">All Reports</h2>

    <!-- Search Box -->
    <div class="search-box">
        <i class="bi bi-search search-icon"></i>
        <input type="text" class="form-control" placeholder="Search..." id="searchInput">
    </div>

    <!-- Filter Section -->
    <div class="filter-section">
        <div class="filter-row">
            <div class="filter-group" style="flex: 0; min-width: auto;">
                <span class="filter-label">Filter By Date:</span>
            </div>
            <div class="filter-group">
                <input type="date" class="form-control" value="2025-04-01">
            </div>
            <div class="filter-group separator">
                —
            </div>
            <div class="filter-group">
                <input type="date" class="form-control" value="2025-04-23">
            </div>
            <button class="btn btn-filter" style="flex: 0; margin-left: auto;">Filter</button>
        </div>
    </div>

    <!-- Page Subtitle -->
    <h5 style="color: #37474f; font-weight: 600; margin-bottom: 1rem;">All Reports</h5>

    <!-- Content Container -->
    <div class="content-container">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th style="width: 30px;">
                            <input type="checkbox">
                        </th>
                        <th class="sortable">Report Type</th>
                        <th class="sortable">Date Range</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><input type="checkbox"></td>
                        <td><a href="#" class="item-link">Found Items</a></td>
                        <td>04/01/2025 - 04/20/2025</td>
                    </tr>
                    <tr>
                        <td><input type="checkbox"></td>
                        <td><a href="#" class="item-link">Lost Items</a></td>
                        <td>04/15/2025 - 04/15/2025</td>
                    </tr>
                    <tr>
                        <td><input type="checkbox"></td>
                        <td><a href="#" class="item-link">Lost & Found Summary</a></td>
                        <td>04/01/2025 - 04/15/2025</td>
                    </tr>
                    <tr>
                        <td><input type="checkbox"></td>
                        <td><a href="#" class="item-link">Lost Items</a></td>
                        <td>04/01/2025 - 04/10/2025</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="pagination-info">
            Showing 1 to 4 of 4 reports
        </div>
        <nav>
            <ul class="pagination">
                <li class="page-item active">
                    <a class="page-link" href="#">1</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">2</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">Next</a>
                </li>
            </ul>
        </nav>
    </div>

    <!-- Footer -->
    <div class="text-center" style="color: #757575; font-size: 0.875rem; margin-top: 3rem; margin-bottom: 2rem;">
        © 2025 Lost&Logged. For academic use only.
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
}
