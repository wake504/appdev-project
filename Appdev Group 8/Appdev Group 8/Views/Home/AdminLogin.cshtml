@{
    ViewData["Title"] = "Lost&Logged | Admin Login";
}

<div class="d-flex align-items-center justify-content-center vh-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5 col-lg-4">

                <!-- App Title -->
                <h3 class="text-center mb-2 fw-bold logo-title">
                    Lost&Logged
                </h3>

                <!-- Admin Login Heading -->
                <h5 class="text-center mb-3 fw-semibold text-secondary">
                    Admin Login
                </h5>

                <!-- Description -->
                <p class="text-center text-muted small mb-4">
                    Authorized staff only. Please enter your credentials to access the admin dashboard.
                </p>

                <!-- Admin Login Card -->
                <div class="card border-0 shadow">
                    <div class="card-body p-4">

                        <!-- Username -->
                        <div class="mb-3">
                            <label class="form-label small text-muted">Username</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white">
                                    <i class="bi bi-person-fill text-primary"></i>
                                </span>
                                <input type="text" class="form-control" placeholder="Username">
                            </div>
                        </div>

                        <!-- Password -->
                        <div class="mb-2">
                            <label class="form-label small text-muted">Password</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white">
                                    <i class="bi bi-lock-fill text-primary"></i>
                                </span>
                                <input type="password" class="form-control" placeholder="Password">
                            </div>
                        </div>

                        <!-- Forgot password -->
                        <div class="mb-3 text-end">
                            <a href="#" class="small text-primary text-decoration-none">
                                Forgot password?
                            </a>
                        </div>

                        <!-- Login Button -->
                        <div class="d-grid">
                            <button class="btn btn-primary">
                                <i class="bi bi-box-arrow-in-right me-1"></i>
                                Admin Login
                            </button>
                        </div>

                    </div>
                </div>

                <!-- Footer -->
                <p class="text-center small text-muted mt-3">
                    Â© 2025 Lost&Logged. For academic use only.
                </p>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
}
