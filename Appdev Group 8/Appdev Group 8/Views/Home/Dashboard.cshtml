@{
    ViewData["Title"] = "Lost&Logged | Dashboard";
}

<style>
    .hero-title {
        color: #1f3c88;
        font-size: 2.7rem;
        font-weight: 700;
    }

    .hero-subtitle {
        color: #6c757d;
        font-size: 0.95rem;
    }

    .btn-primary {
        background-color: #2f6fdf;
        border: none;
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

    .how-title {
        color: #1f3c88;
        font-weight: 600;
    }

    .step-card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 8px 18px rgba(0,0,0,0.08);
        padding: 2rem 1.5rem;
    }

    .step-number {
        color: #2f6fdf;
        font-weight: 600;
        margin-top: 1rem;
    }

    .step-img {
        width: 90px;
        height: auto;
    }
</style>

<!-- HERO -->
<div class="container text-center mt-5">

    <h1 class="hero-title mb-2">Lost&Logged</h1>

    <p class="hero-subtitle mb-4">
        A simple lost and found management system for schools and offices.
    </p>

    <div class="d-flex justify-content-center gap-3 mb-5">
        <a asp-action="ReportLostItem" class="btn btn-primary px-4">Report Lost Item</a>
        <a asp-action="ViewFoundItems" class="btn btn-secondary px-4">View Found Items</a>
    </div>

    <!-- HOW IT WORKS -->
    <h5 class="how-title mb-4">How It Works</h5>

    <div class="row justify-content-center g-4">

        <!-- STEP 1 -->
        <div class="col-md-4">
            <div class="card step-card h-100 text-center">
                <img src="~/images/step-report.png" class="mx-auto step-img" alt="Report" style="width: 90px; height: auto;">
                <h6 class="step-number">1. Report</h6>
                <p class="small text-muted">
                    Submit details about the item you lost, including where and when it happened.
                </p>
            </div>
        </div>

        <!-- STEP 2 -->
        <div class="col-md-4">
            <div class="card step-card h-100 text-center">
                <img src="~/images/step-monitor.png" class="mx-auto step-img" alt="Monitor" style="width: 90px; height: auto;">
                <h6 class="step-number">2. Monitor</h6>
                <p class="small text-muted">
                    Check the system regularly to see updates on your reported item.
                </p>
            </div>
        </div>

        <!-- STEP 3 -->
        <div class="col-md-4">
            <div class="card step-card h-100 text-center">
                <img src="~/images/step-claim.png" class="mx-auto step-img" alt="Claim" style="width: 90px; height: auto;">
                <h6 class="step-number">3. Claim</h6>
                <p class="small text-muted">
                    Once your item is found, visit the office to claim it.
                </p>
            </div>
        </div>

    </div>
</div>

