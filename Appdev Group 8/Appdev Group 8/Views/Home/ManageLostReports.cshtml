@{
    ViewData["Title"] = "Manage Lost Reports";
}

<style>
    .admin-nav {
        border-bottom: 3px solid #e0e0e0;
        padding: 1rem 0;
        margin-bottom: 2rem;
    }

    .admin-nav a {
        color: #616161;
        text-decoration: none;
        margin-right: 2rem;
        font-weight: 500;
        font-size: 0.95rem;
        padding-bottom: 0.5rem;
        border-bottom: 3px solid transparent;
    }

    .admin-nav a.active {
        color: #1976d2;
        border-bottom: 3px solid #1976d2;
    }

    .admin-nav a:hover {
        color: #1976d2;
    }

    .section-title {
        font-size: 1.75rem;
        font-weight: 600;
        color: #37474f;
        margin-bottom: 0.5rem;
    }

    .section-description {
        color: #616161;
        margin-bottom: 2rem;
    }

    .content-container {
        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        padding: 2rem;
    }

    .table {
        margin-bottom: 0;
    }

    .table thead th {
        background-color: #f5f5f5;
        color: #424242;
        font-weight: 600;
        border-bottom: 2px solid #e0e0e0;
        padding: 0.75rem;
    }

    .table tbody tr {
        border-bottom: 1px solid #e0e0e0;
    }

    .table tbody tr:hover {
        background-color: #f9f9f9;
    }

    .table tbody td {
        padding: 0.75rem;
        color: #424242;
        vertical-align: middle;
    }

    .item-link {
        color: #1976d2;
        text-decoration: none;
        font-weight: 500;
    }

    .item-link:hover {
        text-decoration: underline;
    }

    .sortable {
        cursor: pointer;
        user-select: none;
    }

    .sortable::after {
        content: ' ⇅';
        color: #999;
        font-size: 0.875rem;
    }

    .badge-lost {
        background-color: #e53935;
        color: white;
        padding: 0.35rem 0.75rem;
        border-radius: 4px;
        font-size: 0.875rem;
        font-weight: 500;
    }

    .btn-view {
        background-color: #1976d2;
        border-color: #1976d2;
        color: white;
        padding: 0.35rem 1rem;
        font-size: 0.875rem;
    }

    .btn-view:hover {
        background-color: #1565c0;
        border-color: #1565c0;
        color: white;
    }

    .pagination-info {
        color: #616161;
        font-size: 0.875rem;
        margin-top: 1rem;
        margin-bottom: 1rem;
    }

    .pagination .page-link {
        color: #424242;
        border: 1px solid #dee2e6;
    }

    .pagination .page-item.active .page-link {
        background-color: #1976d2;
        border-color: #1976d2;
    }
</style>

<div class="container">
    <!-- Admin Navigation -->
    <div class="admin-nav">
        <a asp-action="AdminDashboard" asp-controller="Home">Admin Dashboard</a>
        <a href="#" class="active">Manage Lost Reports</a>
        <a asp-action="ManageFoundItems" asp-controller="Home">Manage Found Items</a>
        <a asp-action="AdminReports" asp-controller="Home">Admin Reports</a>
        <a asp-action="Logout" asp-controller="Home" class="ms-auto">Logout</a>
    </div>

    <!-- Page Title and Description -->
    <h2 class="section-title">Manage Lost Reports</h2>
    <p class="section-description">
        Here are all the lost items reported by users. Verify details, update statuses, and take appropriate actions as needed.
    </p>

    <!-- Content Container -->
    <div class="content-container">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th class="sortable">Item Name</th>
                        <th class="sortable">Reported By</th>
                        <th class="sortable">Date Lost</th>
                        <th class="sortable">Location</th>
                        <th class="sortable">Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><a href="#" class="item-link">Wireless Earbuds</a></td>
                        <td>Sarah Johnson</td>
                        <td>04/15/2025</td>
                        <td>Cafeteria</td>
                        <td><span class="badge-lost">Lost</span></td>
                        <td><button class="btn btn-view btn-sm"><i class="bi bi-check-circle me-1"></i>View</button></td>
                    </tr>
                    <tr>
                        <td><a href="#" class="item-link">Red Backpack</a></td>
                        <td>Michael Cruz</td>
                        <td>04/14/2025</td>
                        <td>Building A, Hallway</td>
                        <td><span class="badge-lost">Lost</span></td>
                        <td><button class="btn btn-view btn-sm"><i class="bi bi-check-circle me-1"></i>View</button></td>
                    </tr>
                    <tr>
                        <td><a href="#" class="item-link">Laptop Charger</a></td>
                        <td>Emily Tan</td>
                        <td>04/10/2025</td>
                        <td>Library, 2nd Floor</td>
                        <td><span class="badge-lost">Lost</span></td>
                        <td><button class="btn btn-view btn-sm"><i class="bi bi-check-circle me-1"></i>View</button></td>
                    </tr>
                    <tr>
                        <td><a href="#" class="item-link">Blue Pencil Case</a></td>
                        <td>John Reyes</td>
                        <td>04/09/2025</td>
                        <td>Classroom</td>
                        <td><span class="badge-lost">Lost</span></td>
                        <td><button class="btn btn-view btn-sm"><i class="bi bi-check-circle me-1"></i>View</button></td>
                    </tr>
                    <tr>
                        <td><a href="#" class="item-link">Notebook</a></td>
                        <td>Chris dela Cruz</td>
                        <td>04/09/2025</td>
                        <td>Gym Locker Room</td>
                        <td><span class="badge-lost">Lost</span></td>
                        <td><button class="btn btn-view btn-sm"><i class="bi bi-check-circle me-1"></i>View</button></td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="pagination-info">
            Showing 1 to 5 of 27 lost reports
        </div>
        <nav>
            <ul class="pagination">
                <li class="page-item active">
                    <a class="page-link" href="#">1</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">2</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">3</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">Next</a>
                </li>
            </ul>
        </nav>
    </div>

    <!-- Footer -->
    <div class="text-center" style="color: #757575; font-size: 0.875rem; margin-top: 3rem; margin-bottom: 2rem;">
        © 2025 Lost&Logged. For academic use only.
    </div>
</div>

