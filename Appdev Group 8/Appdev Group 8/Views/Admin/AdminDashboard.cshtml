@model IEnumerable<Appdev_Group_8.Models.Item>

@{
    ViewData["Title"] = "Admin Dashboard";
    var totalLost = (ViewData["TotalLost"] as int?) ?? 0;
    var totalFound = (ViewData["TotalFound"] as int?) ?? 0;
}

<h2>Admin Dashboard</h2>

<div class="mb-3 d-flex gap-3 align-items-center">
    <div>
        <a asp-action="ClaimReports" asp-controller="Admin" class="btn btn-outline-primary">Claim Reports</a>
        <a asp-action="ViewUsers" asp-controller="Admin" class="btn btn-outline-secondary">View Users</a>
    </div>

    <div class="ms-auto d-flex gap-3">
        <div class="p-3 bg-white border rounded text-center">
            <div class="h6 mb-1">Lost Items</div>
            <div class="h3">@totalLost</div>
        </div>
        <div class="p-3 bg-white border rounded text-center">
            <div class="h6 mb-1">Found Items</div>
            <div class="h3">@totalFound</div>
        </div>
    </div>
</div>

<h4 class="mt-4">All Reports</h4>

@if (!(Model?.Any() ?? false))
{
    <p class="text-muted">No reports yet.</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Type</th>
                    <th>Date Found</th>
                    <th>Location</th>
                    <th>Reported By</th>
                    <th>Category</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@(string.IsNullOrWhiteSpace(item.Description) ? "-" : item.Description)</td>
                        <td>@item.ItemType</td>
                        <td>
                            @(item.DateLostOrFound.HasValue
                                ? item.DateLostOrFound.Value.ToLocalTime().ToString("yyyy-MM-dd")
                                : item.DateReported.ToLocalTime().ToString("yyyy-MM-dd"))
                        </td>
                        <td>@item.Location</td>
                        <td>@item.ReportingUser?.FullName</td>
                        <td>@item.Category?.CategoryName</td>
                        <td>@item.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
