@model IEnumerable<Appdev_Group_8.Models.Claim>

@{
    ViewData["Title"] = "Claim Reports";
}

<div class="bg-white rounded-3 shadow-sm p-4 mb-4 mt-5">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="h4 fw-bold mb-0 text-dark">
            Claim Reports
        </h2>

        <a asp-controller="Admin" asp-action="AdminDashboard" class="btn btn-outline-secondary px-4">
            <i class="bi bi-arrow-left me-1"></i>Back to Dashboard
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (!(Model?.Any() ?? false))
{
    <p class="text-muted">No claims recorded.</p>
}
else
{
    <div class="table-container">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Claim ID</th>
                        <th>Item</th>
                        <th>Item Type</th>
                        <th>Claimed By</th>
                        <th>Requested</th>
                        <th>Status</th>
                        <th>Collection Location</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td>@c.ClaimId</td>
                            <td>@c.Item?.Title</td>
                            <td>
                                <span class="badge badge-bordered @(c.Item?.ItemType == ItemType.Lost ? "border-lost" : "border-found")">
                                    @c.Item?.ItemType
                                </span>
                            </td>
                            <td>@c.ClaimingUser?.FullName</td>
                            <td>@c.ClaimDate.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                            <td>
                                <span class="badge badge-bordered @(c.ClaimStatus == ClaimStatus.Approved ? "border-approved" : c.ClaimStatus == ClaimStatus.Rejected ? "border-rejected" : c.ClaimStatus == ClaimStatus.ItemCollected ? "border-collected" : "border-pending")">
                                    @c.ClaimStatus
                                </span>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(c.CollectionLocation))
                                {
                                    <small>@c.CollectionLocation</small>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (c.ClaimStatus == ClaimStatus.PendingApproval)
                                {
                                    <form asp-controller="Admin" asp-action="ApproveClaim" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="claimId" value="@c.ClaimId" />
                                        <input type="text" name="collectionLocation" placeholder="Collection location" value="Security Office, PUP Main Gate" class="form-control form-control-sm mb-1" />
                                        <textarea name="verificationNotes" placeholder="Verification notes" class="form-control form-control-sm mb-1" rows="2"></textarea>
                                        <button type="submit" class="btn btn-sm btn-primary">Approve</button>
                                    </form>

                                    <form asp-controller="Admin" asp-action="RejectClaim" method="post" class="d-inline ms-1">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="claimId" value="@c.ClaimId" />
                                        <button type="submit" class="btn btn-sm btn-outline-secondary">Reject</button>
                                    </form>
                                }
                                else if (c.ClaimStatus == ClaimStatus.Approved)
                                {
                                    <form asp-controller="Admin" asp-action="MarkAsCollected" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="claimId" value="@c.ClaimId" />
                                        <button type="submit" class="btn btn-sm btn-primary">Mark as Collected</button>
                                    </form>
                                }
                                else if (c.ClaimStatus == ClaimStatus.ItemCollected)
                                {
                                    <small class="text-muted">✓ Collected on @c.CollectionDate?.ToLocalTime().ToString("yyyy-MM-dd")</small>
                                }
                                else
                                {
                                    <span class="text-muted">No action available</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
