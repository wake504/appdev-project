@model IEnumerable<Appdev_Group_8.Models.User>

@{
    ViewData["Title"] = "View Users";
}

<div class="bg-white rounded-3 shadow-sm p-4 mb-4 mt-5">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="h4 fw-bold mb-0 text-dark">
            List of Users
        </h2>

        <a asp-controller="Admin" asp-action="AdminDashboard" class="btn btn-outline-secondary px-4">
            <i class="bi bi-arrow-left me-1"></i>Back to Dashboard
        </a>
    </div>
</div>

@if (!(Model?.Any() ?? false))
{
    <p class="text-muted">No users found.</p>
}
else
{
    <div class="table-container">
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Full Name</th>
                    <th>Email / SchoolID</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model)
                {
                    <tr>
                        <td>@u.FullName</td>
                        <td>@(u.Email ?? u.SchoolId)</td>
                        <td>@u.Role</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
